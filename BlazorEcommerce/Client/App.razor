<CascadingAuthenticationState>
	<Router AppAssembly="@typeof(App).Assembly">
		<Found Context="routeData">
			<AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(ShopLayout)">
				<NotAuthorized>
					<h3>Упс! Вам не разрешено просматривать эту страницу.</h3>
					<h5>Пожалуйста <a href="login">войдите</a> или <a href="register">зарегистрируйте</a> новый аккаунт.</h5>
				</NotAuthorized>
			</AuthorizeRouteView>
			<FocusOnNavigate RouteData="@routeData" Selector="h1" />
		</Found>
		<NotFound>
			<PageTitle>Не найдено</PageTitle>
			<LayoutView Layout="@typeof(ShopLayout)">
				<p role="alert">Извините, по этому адресу ничего нет.</p>
			</LayoutView>
		</NotFound>
	</Router>
</CascadingAuthenticationState>